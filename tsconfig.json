{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "module": "umd",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "theme": "markdown",
    "includeDeclarations": true,
    "excludeExternals": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest"
  ]
}
